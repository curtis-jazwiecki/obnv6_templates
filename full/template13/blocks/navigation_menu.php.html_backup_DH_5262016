      <script type="text/javascript">



		var addcls = jQuery.noConflict();



		addcls(".navbar-inner button#btn").click(function(){



			 if (addcls(".navbar-inner #jsn-pos-mainnav").hasClass('intro')) {



				addcls(".navbar-inner #jsn-pos-mainnav").removeClass("intro");



			 }



			 else {



				 addcls(".navbar-inner #jsn-pos-mainnav").addClass("intro");



			 }



		}); 



		</script> 



        <script type="text/javascript">



			addcls('.headermenujs').hide();



			var start_container = '';



			function showHideMenuMobile(container){



				if(start_container != container){



					addcls('.headermenujs').hide();



					addcls('#'+container).slideDown();



					start_container = container;



					addcls('.setinitial').html('<i class="fa fa-plus plus_icon"></i>');



					addcls('#toggle_icon_'+container).html('<i class="fa fa-minus minus_icon"></i>');



					



				}else{



					addcls('#'+container).slideUp();



					start_container = '';



					addcls('#toggle_icon_'+container).html('<i class="fa fa-plus plus_icon"></i>');



				}



			}



			function showHideMenu(container){



				



				if(start_container != container){



					addcls('.headermenujs').hide();



					addcls('#'+container).slideDown();



					start_container = container;



					addcls('.setinitial').html('<i class="fa fa-plus plus_icon"></i>');



					addcls('#toggle_icon_'+container).html('<i class="fa fa-minus minus_icon"></i>');



					



				}else{



					



					location = addcls('.main_link_'+container).attr('id');



					//addcls('#'+container).slideUp();



					//start_container = '';



					//addcls('#toggle_icon_'+container).html('<i class="fa fa-plus plus_icon"></i>');



				}



			}



			if(addcls(window).width() >= 980){



				addcls(document).click(function(event) { 



					if(!addcls(event.target).closest('#SiteNav').length) {



						if(addcls('#SiteNav').is(":visible")) {



							addcls('.headermenujs').hide();



						}



					}        



				});



			}



			



		</script>



