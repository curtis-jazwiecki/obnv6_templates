<script type="text/javascript">



    var tba = jQuery.noConflict();







    tba(document).ready(function () {



        var scroll_pos = 0;







        tba(document).scroll(function () {



            //alert("hello");



            scroll_pos = tba(this).scrollTop();



            if (scroll_pos > 25) {



               tba("#mj-righttop").css('background-color', '#000');



                tba("#mj-righttop").css('position', 'fixed');



				tba("#mj-righttop").css('top', '-1px');



				 tba("#mj-righttop").css('z-index', '999999');



//                tba("#mj-righttop i").css('color', '#FFFFFF');



//                tba("#mj-righttop div").css('color', '#FFFFFF');



                //tba("#mj-topbar li").css('background', 'url("images/topbar-arrow-white.png") no-repeat scroll right center transparent');



                tba("#mj-righttop li:last-child").css('background', 'none');



				tba(".search_box").css('position', 'fixed');



				tba(".search_box").css('top', '7px');



				 tba(".search_box").css('z-index', '2147483647');



				 tba(".search_box").css('margin-left', '300px');



				  tba(".search_box").css('width', '380px');



				  //tba(".search_box").css('background', '#000');



				  



				tba(".cart_button_top").css('position', 'fixed');



				tba(".cart_button_top").css('top', '9px');



				 tba(".cart_button_top").css('z-index', '2147483647');



				  tba(".cart_button_top").css('margin-left', '1200px');



				   tba(".cart_button_top").css('background', '#000');



				    tba(".pull-right.non-active-top > a").css('display', 'none');



				



				 



            }



            else



            {



                tba("#mj-righttop").css('background', '#000000');



				tba("#mj-righttop").css('top', '0px');



				 tba("#mj-righttop").css('position', 'relative');



                //tba("#mj-righttop a").css('color', '#008080');



//                tba("#mj-righttop i").css('color', '#008080');



//                tba("#mj-righttop div").css('color', '#008080');



                //tba("#mj-topbar li").css('background', 'url("images/icons/<?php echo $_SESSION['themecolor_com']."-arrow.png" ?>") no-repeat scroll right center transparent');



                tba("#mj-righttop li:last-child").css('background', 'none');



				tba(".search_box").css('position', 'relative');



